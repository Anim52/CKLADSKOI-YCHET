<Window x:Class="Lopushok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lopushok"
        mc:Ignorable="d"
        Title="ZакупО4ка" Height="690" Width="1200"
        MinHeight="500" MinWidth="1000"
        Background="#bbbbbb"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Image Width="Auto" Height="45" Source="/Images/Z.png" />
                <TextBlock VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Red" FontWeight="Bold" FontSize="30" Text="ZакупО4ка" />
            </StackPanel>
            
            <Button x:Name="Agents" 
                    Click="Agents_Click"   
                    Width="250"
                    HorizontalContentAlignment="Center"
                    Background="Red"                     
                    Content="Агент"                
                    Grid.Row="1" 
                    Foreground="#FFFFFF"  
                    FontSize="14" 
                    FontWeight="Medium" 
                    Margin="0,1,0,1" 
                    Style="{StaticResource LoginButton}"/>

            <Button x:Name="Materials" 
                    Click="Materials_Click"                    
                    Content="Материалы" 
                    Width="250"
                    HorizontalContentAlignment="Center"
                    Style="{StaticResource LoginButton}"
                    Grid.Row="2" 
                    Background="Red" 
                    Foreground="#FFFFFF" 
                    FontSize="14" 
                    FontWeight="Medium" 
                    Margin="0,1,0,1" />

            <Button x:Name="Warehouses" 
                    Click="Warehouses_Click"                    
                    Content="Склады" 
                    Width="250"
                    HorizontalContentAlignment="Center"
                    Style="{StaticResource LoginButton}"
                    Grid.Row="3" 
                    Background="Red" 
                    Foreground="#FFFFFF" 
                    FontSize="14" 
                    FontWeight="Medium" 
                    Margin="0,1,0,1" />

            <Button x:Name="Products" 
                    Click="Products_Click"                    
                    Content="Продукты"
                    Width="250"
                    HorizontalContentAlignment="Center"
                    Style="{StaticResource LoginButton}"
                    Grid.Row="4" 
                    Background="Red" 
                    Foreground="#FFFFFF" 
                    FontSize="14" 
                    FontWeight="Medium" 
                    Margin="0,1,0,1" />

            <Button x:Name="WarehouseProducts" 
                    Click="WarehouseProducts_Click"                    
                    Content="Продукты на складах" 
                    Width="250"
                    HorizontalContentAlignment="Center"
                    Style="{StaticResource LoginButton}"
                    Grid.Row="5" 
                    Background="red" 
                    Foreground="#FFFFFF" 
                    FontSize="14" 
                    FontWeight="Medium" 
                    Margin="0,1,0,1" />

            <Button x:Name="Sales" 
                    Click="Sales_Click"                    
                    Content="Продажи" 
                    Grid.Row="6" 
                    Background="red" 
                    Foreground="#FFFFFF" 
                    Width="250"
                    HorizontalContentAlignment="Center"
                    Style="{StaticResource LoginButton}"
                    FontSize="14" 
                    FontWeight="Medium" 
                    Margin="0,1,0,1" />
        </Grid>

        <Frame x:Name="MainFrame" Grid.Column="3" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
