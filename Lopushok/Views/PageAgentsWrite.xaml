<Page x:Class="Lopushok.Views.PageAgentsWrite"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lopushok.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAgentsWrite"
      Background="#bbbbbb">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="800">
            <TextBlock TextWrapping="Wrap" Padding="5" Text="Название агента"/>
            <TextBox x:Name="Name" TextWrapping="Wrap" Padding="5" Text="" Style="{StaticResource TextBoxStyle}"/>

            <TextBlock TextWrapping="Wrap" Padding="5" Text="ИНН"/>
            <TextBox x:Name="INN" TextWrapping="Wrap" Padding="5" Text="" />

            <TextBlock TextWrapping="Wrap" Padding="5" Text="Юридический адрес"/>
            <TextBox x:Name="LegalAdress" TextWrapping="Wrap" Padding="5" Text="" />

            <TextBlock TextWrapping="Wrap" Padding="5" Text="Директор"/>
            <TextBox x:Name="Directro" TextWrapping="Wrap" Padding="5" Text="" />

            <Button x:Name="Save" 
            Click="Save_Click"
            Content="Сохранить" 
            Grid.Row="2" 
            Background="#00CC76" 
            Foreground="#FFFFFF" 
            BorderBrush="Transparent" 
            FontSize="14" 
            FontWeight="Medium" 
            Margin="0,20,0,10" />

            <Button x:Name="Back" 
            Click="Back_Click"
            Content="Отмена" 
            Grid.Row="2" 
            Background="#00CC76" 
            Foreground="#FFFFFF" 
            BorderBrush="Transparent" 
            FontSize="14" 
            FontWeight="Medium" 
            Margin="0,1,0,1" />
        </StackPanel>
    </Grid>
</Page>
