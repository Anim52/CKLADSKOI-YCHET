<Page x:Class="Lopushok.Views.PageMaterialsWrite"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lopushok.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMaterialsWrite"
       Background="#bbbbbb">

    <Grid >
        <StackPanel HorizontalAlignment="Center" Width="800">
            <TextBlock TextWrapping="Wrap" Padding="5" Text="Название материала"/>
            <TextBox x:Name="Name" TextWrapping="Wrap" Padding="5" Text="" Style="{StaticResource TextBoxStyle}"/>

            <TextBlock TextWrapping="Wrap" Padding="5" Text="Колличество материла"/>
            <TextBox x:Name="CountMaterials" TextWrapping="Wrap" Padding="5" Text="" Style="{StaticResource TextBoxStyle}"/>

            <TextBlock TextWrapping="Wrap" Padding="5" Text="Тип материала"/>
            <TextBox x:Name="TypeMaterial" TextWrapping="Wrap" Padding="5" Text="" Style="{StaticResource TextBoxStyle}"/>

            <Button x:Name="Save" 
            Click="Save_Click"
            Content="Сохранить" 
            Grid.Row="2" 
            Background="red" 
            Foreground="#FFFFFF" 
            BorderBrush="Transparent" 
            FontSize="14" 
            FontWeight="Medium" 
            Margin="0,20,0,10" Style="{StaticResource LoginButton}"/>

            <Button x:Name="Back" 
            Click="Back_Click"
            Content="Отмена" 
            Grid.Row="2" 
            Background="Red" 
            Foreground="#FFFFFF" 
            BorderBrush="Transparent" 
            FontSize="14" 
            FontWeight="Medium" 
            Margin="0,1,0,1" Style="{StaticResource LoginButton}"/>
        </StackPanel>
    </Grid>
</Page>
