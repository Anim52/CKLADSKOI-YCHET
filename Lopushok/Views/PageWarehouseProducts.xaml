<Page x:Class="Lopushok.Views.PageWarehouseProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lopushok.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageWarehouseProducts">

    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="15" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="DataGrid" Grid.Column="1" AutoGenerateColumns="False" CanUserAddRows="False" RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Id}" Header="ID" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=WarehouseId}" Header="Склад" Width="*" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=ProductId}" Header="Продукт" Width="*" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=CountProduct}" Header="Колличество продукта на складе" Width="*" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button x:Name="Add" 
            Click="Add_Click"
            Content="Добавить" 
            Grid.Row="0" 
            Background="#00CC76" 
            Foreground="#FFFFFF" 
            BorderBrush="Transparent" 
            FontSize="14" 
            FontWeight="Medium" 
            Margin="0,1,0,1" />

            <Button x:Name="Update" 
            Click="Update_Click"
            Content="Изменить" 
            Grid.Row="1" 
            Background="#00CC76" 
            Foreground="#FFFFFF" 
            BorderBrush="Transparent" 
            FontSize="14" 
            FontWeight="Medium" 
            Margin="0,1,0,1" />

            <Button x:Name="Delet" 
            Click="Delet_Click"                    
            Content="Удалить" 
            Grid.Row="2" 
            Background="#00CC76" 
            Foreground="#FFFFFF" 
            BorderBrush="Transparent" 
            FontSize="14" 
            FontWeight="Medium" 
            Margin="0,1,0,1" />
        </Grid>
    </Grid>
</Page>
