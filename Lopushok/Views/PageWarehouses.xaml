<Page x:Class="Lopushok.Views.PageWarehouses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lopushok.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageWarehouses"
       Background="#bbbbbb">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="15" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="DataGrid" Grid.Column="1" AutoGenerateColumns="False" CanUserAddRows="False" RowHeaderWidth="0" Background="#bbbbbb">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Id}" Header="ID" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=Name}" Header="Название склада" Width="*" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=Adress}" Header="Адрес" Width="*" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button x:Name="Add" 
              Click="Add_Click"
              Content="Добавить" 
              Grid.Row="0" 
              Background="Red" 
              Foreground="#FFFFFF" 
              BorderBrush="Transparent" 
              FontSize="14" 
              FontWeight="Medium" 
              Margin="0,1,0,1"
                    Width="110"
                    Style="{StaticResource LoginButton}"/>

            <Button x:Name="Update" 
              Click="Update_Click"
              Content="Изменить" 
              Grid.Row="1" 
              Background="Red" 
              Foreground="#FFFFFF" 
              BorderBrush="Transparent" 
              FontSize="14" 
              FontWeight="Medium" 
              Margin="0,1,0,1"
                    Width="110"
                    Style="{StaticResource LoginButton}"/>

            <Button x:Name="Delet" 
              Click="Delet_Click"                    
              Content="Удалить" 
              Grid.Row="2" 
              Background="Red" 
              Foreground="#FFFFFF" 
              BorderBrush="Transparent" 
              FontSize="14" 
              FontWeight="Medium" 
              Margin="0,1,0,1"
                    Width="110"
                    Style="{StaticResource LoginButton}"/>
        </Grid>
    </Grid>
</Page>
